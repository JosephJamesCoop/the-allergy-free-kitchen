<article class="container recipe-article">
    <div class="row">
        <h3>
            {{name}}
        </h3>
    </div>
    <div class="row">
        <div id="description" class="col-1">
            <p>
                {{>single-recipe-description}}
            </p>
            <div id="ingredients">
                {{>ingredients ingredient}}
            </div>
        </div>
        <div class="col-1">
            {{instructions}}
        </div>
    </div>
</article>

<script src="/javascript/recipe-profile.js"></script>